{
  "extends": [
    "plugin:shopify/typescript",
    "plugin:shopify/jest",
    "plugin:shopify/prettier"
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "rules": {
    "no-empty-pattern": "off"
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.test.tsx"],
      "rules": {
        "shopify/jsx-no-hardcoded-content": "off"
      }
    }
  ]
}
